{
  "name": "@terminus/stylelint-config-frontend",
  "version": "0.0.0-PLACEHOLDER",
  "description": "Terminus stylelint configurations.",
  "homepage": "https://github.com/GetTerminus/stylelint-config-frontend",
  "keywords": [
    "stylelint",
    "stylelintconfig"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GetTerminus/stylelint-config-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/GetTerminus/stylelint-config-frontend/issues"
  },
  "main": "./index.js",
  "scripts": {
    "//////// Section: Linting": "==============================",
    "lint": "npx eslint index.js --fix",
    "lint:ci": "npx eslint index.js",
    "//////// Section: Release": "==============================",
    "semantic-release": "semantic-release",
    "check:next-release": "npx semantic-release --no-ci --dry-run",
    "//////// Section: Tooling": "==============================",
    "docs:toc": "npx doctoc --title '**Table of Contents**' --maxlevel 3 README.md",
    "lint-staged": "lint-staged",
    "validate:circleci": "circleci config validate -c .circleci/config.yml",
    "cm": "npx git-cz",
    "contributors:add": "npx all-contributors add",
    "contributors:generate": "npx all-contributors generate",
    "contributors:check": "npx all-contributors check"
  },
  "author": "Terminus",
  "license": "MIT",
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "loglevel": "warn",
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./tooling/cz-config.js"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn run lint",
      "git add"
    ]
  },
  "publishConfig": {
    "tag": "next",
    "access": "public"
  },
  "release": {
    "branch": "release",
    "plugins": [
      [
        "@semantic-release/release-notes-generator",
        {
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING"
            ]
          },
          "writerOpts": {
            "commitsSort": [
              "subject",
              "scope"
            ]
          }
        }
      ],
      "@semantic-release/git"
    ],
    "verifyConditions": [
      "condition-circle",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "prepare": [
      {
        "path": "@semantic-release/changelog",
        "changelogFile": "CHANGELOG.md"
      },
      {
        "path": "@semantic-release/git",
        "message": "ðŸ“š Add ${nextRelease.version} release notes [skip ci]"
      }
    ],
    "publish": [
      {
        "path": "@semantic-release/npm",
        "npmPublish": true
      },
      {
        "path": "@semantic-release/github",
        "assets": [
          "CHANGELOG.md"
        ],
        "npmPublish": false
      }
    ]
  },
  "engines": {
    "node": ">= 8.0.0",
    "npm": ">= 5.0.0",
    "yarn": ">= 1.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "condition-circle": "^2.0.2",
    "cz-customizable": "^5.5.1",
    "doctoc": "^1.4.0",
    "eslint": "^5.15.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "semantic-release": "^15.13.3",
    "validate-commit-msg": "^2.14.0"
  },
  "dependencies": {
    "stylelint": "^10.0.1",
    "stylelint-declaration-block-no-ignored-properties": "^2.1.0",
    "stylelint-declaration-strict-value": "^1.1.3",
    "stylelint-declaration-use-variable": "^1.7.0",
    "stylelint-no-indistinguishable-colors": "^1.2.1",
    "stylelint-order": "^3.0.0",
    "stylelint-scss": "^3.7.0",
    "stylelint-selector-no-empty": "^1.0.7"
  }
}
